@model LCA_WEB.Models.ProduktTypViewViewModel
@{
    ViewBag.Title = "Typen eines Produktes hinzufügen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">.my-class {color: black}
 span.my-class {color: black}
 a.my-class {color: black}
</style>
@using (Html.BeginForm("AddProduktTyp","Home",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<table id="tb_0">
    <tr>
        <th>Name:</th>
    </tr>
    <tr class="center-block">
        <td>
            @Html.EditorFor(model => model._ProduktTyp.Name, new {id="produktName"})
            @Html.ValidationMessageFor(model => model._ProduktTyp.Name, "", new { @class = "text-danger" })
        </td>
           @Html.HiddenFor(model => model._View)
    </tr>
</table>

   
   
    <br />
    <div>
        <input type="submit" value="Erstellen" class="btn btn-default"/>
        |
        <span style="color: black">@Html.ActionLink("Zurück", Model._View,null, new { @class="my-class" })</span>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
      
    </script>
}
}